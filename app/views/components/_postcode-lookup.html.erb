<%
  location_error ||= false
  input_text ||= "Enter a postcode"
  postcode ||= ""
  postcode_hint_text ||= "For example SW1A 2AA"
  button_text ||= "Find"
  error_message ||= "This isn't a valid postcode."
  error_description ||= "Check it and enter it again."
%>

<div class="postcode-lookup">
  <% if location_error %>
    <%= render "govuk_publishing_components/components/error_alert", {
      message: error_message,
      description: error_description,
    } %>
  <% end %>
  <form method="post">
    <fieldset>
      <legend class="visuallyhidden">Postcode lookup</legend>
      <%= render "govuk_publishing_components/components/input", {
          label: {
            text: input_text
          },
          value: postcode,
          name: "postcode",
          id: "postcode",
          hint: postcode_hint_text,
          invalid: location_error ? 'true' : 'false',
          autocomplete: "postal-code",
        } %>
      <%= render "govuk_publishing_components/components/button", text: button_text, margin_bottom: true %>
      <%= tag.p link_to("Find a postcode on Royal Mail's postcode finder",
                      "http://www.royalmail.com/find-a-postcode",
                      target: "_blank",
                      class: "govuk-link",
                      rel: "external"),
                      class: "govuk-body" %>
    </fieldset>
  </form>
</div>
