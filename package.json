{
  "name": "finder-frontend",
  "description": "Finder Frontend renders search (and other pages) on GOV.UK",
  "private": true,
  "author": "Government Digital Service",
  "license": "MIT",
  "scripts": {
    "lint": "yarn run lint:js",
    "lint:js": "standardx 'app/assets/javascripts/**/*.js' 'spec/javascripts/**/*.js'"
  },
  "standardx": {
    "env": {
      "browser": true,
      "jquery": true,
      "jasmine": true
    },
    "globals": [
      "GOVUK"
    ],
    "ignore": [
      "spec/javascripts/vendor"
    ]
  },
  "eslintConfig": {
    "rules": {
      "no-var": 0
    }
  },
  "devDependencies": {
    "standardx": "^7.0.0"
  }
}
